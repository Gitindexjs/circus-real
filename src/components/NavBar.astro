---
import { Icon } from "astro-icon";

type Link = {
  alt: string;
  name: string;
  link: string;
};

const links: Link[] = [
  { alt: "Home", link: "/", name: "ant-design:home-filled" },
  { alt: "Projects", link: "/projects", name: "ph:code-bold" },
  { alt: "About", link: "/about", name: "mdi:contact" },
  { alt: "Contact", link: "/contact", name: "fa-solid:paper-plane" },
];
---

<nav>
  <ul class="flex flex-wrap justify-center gap-4">
    {
      links.map(({ alt, link, name }) => (
        <li class="rounded-md px-2 pt-1 pb-2 text-lg bg-secondary-900">
          <a href={link} class="flex flex-col justify-center gap-1">
            <h3>{alt}</h3>
            <Icon {name} {alt} height="50" aria-label={alt} />
          </a>
        </li>
      ))
    }
  </ul>
</nav>
